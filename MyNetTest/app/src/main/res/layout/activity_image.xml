<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.mynettest.Activity.ImageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#66CC66"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light">
        <TextView
            android:id="@+id/header_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/header_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/image_text_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="请输入图片的网址"/>
        <Button
            android:id="@+id/set_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"/>
    </LinearLayout>


    <TextView
        android:id="@+id/previous_"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#bebebe"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/previous"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="#bebebe"/>
        <ImageView
            android:id="@+id/image_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="8dp" />
        <TextView
            android:id="@+id/next"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="#bebebe"/>
    </LinearLayout>
    <TextView
        android:id="@+id/next_"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#bebebe"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/getImage_previous_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:text="上一张"/>
        <Button
            android:id="@+id/getImage_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="获取图片"/>
        <Button
            android:id="@+id/getImage_next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:text="下一张"/>
    </LinearLayout>


</LinearLayout>
