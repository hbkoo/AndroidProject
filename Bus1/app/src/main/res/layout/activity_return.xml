<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.bus1.Activity.ReturnActivity"
    android:orientation="vertical"
    android:background="@color/lightGray">
    <!--ffeeeeeefff5f5f5-->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_return"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#66CC66"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light">
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/toolbar_dropshadow"/>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/opinion_et"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:layout_margin="8dp"
                android:gravity="top"
                android:background="@drawable/edit_shape"
                android:lines="10"
                android:maxLines="10"
                android:maxLength="200"
                android:hint="在此输入您宝贵的意见（最多200字）"/>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_bgcolor"
                android:text="提       交"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
