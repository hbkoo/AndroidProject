<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.acer.enterprise.activity.ReleaseActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/myColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <ImageView
                android:id="@+id/change_back_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/change_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="修改信息"
                android:textSize="20sp" />
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/notepad_edit_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/change_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/my_edit_bg"
            android:gravity="center"
            android:textSize="22sp"
            android:hint="请输入标题"
            android:maxLines="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/change_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:textColor="@color/myGrey"
                android:textSize="18sp"
                android:text="123"/>
        </FrameLayout>


        <EditText
            android:id="@+id/change_content_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/my_edit_bg"
            android:gravity="left|top"
            android:hint="添加信息"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/change_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="修       改"
            android:background="@drawable/btn_bg_rc"
            android:textColor="@color/myWhite"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
